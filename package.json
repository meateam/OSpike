{
  "name": "authorization-server",
  "version": "1.0.0",
  "description": "An OAuth2 authorization server supporting OpenID Connect",
  "main": "app.js",
  "scripts": {
    "start-watch": "npm run build && nodemon -e ts -w ./src -i ./src/**/*.spec.ts -x npm run watch-serve",
    "serve": "node dist/server.js",
    "watch-serve": "ts-node --inspect src/server.ts",
    "build": "npm run copy-files && tsc",
    "build-watch": "tsc -w",
    "tslint-config": "tslint -c tslint.json -p tsconfig.json",
    "copy-files": "node ./scripts/copy_files.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakedmanes/authorization-server.git"
  },
  "keywords": [
    "oauth2",
    "openidconnect",
    "authorization",
    "authentication",
    "passport",
    "express"
  ],
  "author": "Shaked Manes & Michael T",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shakedmanes/authorization-server/issues"
  },
  "homepage": "https://github.com/shakedmanes/authorization-server#readme",
  "bin": {
    "tslint": "./node_modules/.bin/tslint",
    "tsc": "./node_moduels/.bin/tsc",
    "nodemon": "./node_modules/.bin/nodemon",
    "cpx": "./node_modules/.bin/cpx"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "connect-ensure-login": "^0.1.1",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "mongoose": "^5.2.7",
    "morgan": "^1.9.0",
    "nanoid": "^1.1.0",
    "oauth2orize": "^1.11.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-strategy": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/connect-ensure-login": "^0.1.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/mongoose": "^5.2.4",
    "@types/morgan": "^1.7.35",
    "@types/nanoid": "^1.0.0",
    "@types/oauth2orize": "^1.8.3",
    "@types/passport": "^0.4.6",
    "@types/passport-http": "^0.3.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-local": "^1.0.33",
    "@types/passport-oauth2-client-password": "^0.1.2",
    "@types/passport-strategy": "^0.2.35",
    "cpx": "^1.5.0",
    "nodemon": "^1.18.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^3.0.1"
  }
}
